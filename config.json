{
    "audio": "pulseaudio",
    "bootloader": "grub-install",
    "custom-commands": [
        "git clone --bare https://github.com/rbartlensky/dotfiles /home/YOUR_USERNAME/.dotfiles"
    ],
    "gfx_driver": "VMware / VirtualBox (open-source)",
    "harddrives": [
        "/dev/YOUR_DRIVE"
    ],
    "hostname": "YOUR_HOSTNAME",
    "kernels": ["linux"],
    "keyboard-layout": "us",
    "mirror-region": {
        "Worldwide": {
            "https://mirror.rackspace.com/archlinux/$repo/os/$arch": true
        }
    },
    "nic": {
    	"type": "nm",
        "dns": ["1.1.1.1"]
    },
    "ntp": true,
    "packages": [
        "alacritty",
        "emacs",
        "firefox",
        "jq",
        "git",
        "fish",
        "vim",
        "lightdm",
        "lightdm-gtk-greeter",

        "i3-wm",
        "i3lock",
	"i3status",
	"dmenu",
        "xterm"
    ],
    "profile": "xorg",
    "script": "guided",
    "services": ["lightdm"],
    "swap": true,
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "Europe/London"
}
