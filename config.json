{
    "audio": "pulseaudio",
    "bootloader": "grub-install",
    "custom-commands": [
        "sudo -u YOUR_USERNAME git clone --bare https://github.com/rbartlensky/dotfiles /home/YOUR_USERNAME/.dotfiles",
        "sudo -u YOUR_USERNAME /usr/bin/git --git-dir=/home/YOUR_USERNAME/.dotfiles/ --work-tree=/home/YOUR_USERNAME checkout --force"
    ],
    "gfx_driver": "All open-source (default)",
    "harddrives": [
        "/dev/YOUR_DRIVE"
    ],
    "hostname": "YOUR_HOSTNAME",
    "kernels": ["linux"],
    "keyboard-layout": "us",
    "nic": {
    	"type": "nm",
        "dns": ["1.1.1.1"]
    },
    "ntp": true,
    "packages": [
        "alacritty",
        "alsa-utils",
        "base-devel",
        "brightnessctl",
        "cgdb",
        "curl",
        "emacs-nativecomp",
        "fd",
        "feh",
        "firefox",
        "fish",
        "git",
        "gnupg",
        "jq",
        "neomutt",
        "network-manager-applet",
        "okular",
        "openssh",
        "pamixer",
        "pavucontrol",
        "playerctl",
        "polkit",
        "python",
        "ranger",
        "ripgrep",
        "rustup",
        "strace",
        "terminus-font",
        "tmux",
        "ttf-dejavu",
        "vim",
        "vlc",

        "lightdm",
        "lightdm-gtk-greeter",

	"dmenu",
	"i3status",
        "i3-wm",
        "i3lock",
        "lxrandr",
        "xterm"
    ],
    "profile": "xorg",
    "script": "guided",
    "services": ["lightdm", "polkit", "sshd"],
    "swap": true,
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "Europe/London"
}
