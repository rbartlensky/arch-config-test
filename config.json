{
    "audio": "pulseaudio",
    "bootloader": "grub-install",
    "harddrives": [
        "/dev/YOUR_DRIVE"
    ],
    "hostname": "YOUR_HOSTNAME",
    "kernels": [
        "linux"
    ],
    "keyboard-layout": "us",
    "mirror-region": {
        "Worldwide": {
            "https://mirror.rackspace.com/archlinux/$repo/os/$arch": true
        }
    },
    "ntp": true,
    "packages": [
        "emacs",
        "fish",
        "vim"
    ],
    "profile": "i3",
    "script": "guided",
    "swap": true,
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "GMT+1"
}
